      <input class="margin-top-7" id="OrganizationName" name="OrganizationName" onkeypress="validatecharacters(event)" type="text" value="" />
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="search-align">
        <input type="button" value="SEARCH" class="search" />
      </div>
    </div>
  </div>
  <div class="row no-margin">
    <div class="col-sm-12" id="search-results"></div>
    <div class="col-sm-12" id="search-error">Please enter at least the first 3 characters of your association group.</div>
  </div>
</div>

