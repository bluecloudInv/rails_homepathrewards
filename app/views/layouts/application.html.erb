          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%=link_to image_tag("logo_nav_h.png", border: 0), :controller => :welcome, :action => :index %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <!--<li><a href="Home/EligibilitySearch.html">Am I Eligible</a></li>-->
            <li><%= link_to "Am I Eligible", :controller => :welcome, :action => :eligible %></li>
            <!--<li><a href="Home/Vehicles.html">Choose My Perfect Home</a></li>-->
            <li><%= link_to "Choose My Perfect Home", :controller => :welcome, :action => :choose %></li>
